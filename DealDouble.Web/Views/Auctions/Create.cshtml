
<form method="post" action="Auctions/Create/" id="create-form">
    <div class="row">

        <div class="form-group col-md-6">
            <label>Title</label>
            <input class="form-control" name="Title" />
        </div>

        <div class="form-group col-md-6">
            <label>Description</label>
            <input class="form-control" name="Description" />
        </div>


        <div class="form-group col-md-6">
            <label>
                Actual Amount
            </label>
            <input class="form-control" name="ActualAmount" />
        </div>

        <div class="form-group col-md-6">
            <label>
                Starting Time
            </label>
            <input class="form-control" name="StartingTime" />
        </div>

        <div class="form-group col-md-6">
            <label>
                Ending Time
            </label>
            <input class="form-control" name="EndingTime" />
        </div>

        <div class="modal-footer col-md-12 mb-2">
            <button class="btn btn-primary" type="button" id="saveButton">Submit</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</form>

<script>
    document.querySelector("#saveButton").addEventListener('click', function () {
       
        document.querySelector("body").style.overflow = 'visible';
    });
    $("#saveButton").click(function () {
        $.ajax({
            url: "Auctions/Create/",
            method: "post",
            data: $("#create-form").serialize(),
            success: function (data) {
                RefreshMode = true;
                //learInterval(Continued);
                $("#listing-area").html(data);
                $("#exampleModal").modal("hide");
                $('.modal-backdrop').remove();
            },
        })
            
        
    });
</script>

